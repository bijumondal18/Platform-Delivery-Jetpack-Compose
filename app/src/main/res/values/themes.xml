<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PlatformDelivery" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.PlatformDelivery.SplashTheme" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- Splash screen icon (adaptive icon recommended) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Optional: Duration of splash icon animation -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- Set the theme to use after splash -->
        <item name="postSplashScreenTheme">@style/Theme.PlatformDelivery</item>
    </style>

</resources>